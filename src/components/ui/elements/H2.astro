---
import { twMerge } from "tailwind-merge";

interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---

<h2
  class={twMerge(
    "flex items-center text-[4.25mm] leading-[6.35mm] uppercase",
    className
  )}
>
  <slot />
</h2>

<style>
  h2 {
    color: var(--headerBackground);
  }
</style>
